@using System.Web.Mvc.Html
@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/Theme/Default/Site")
    @Styles.Render("~/Content/Theme/Default/styles/jquery")
    @Styles.Render("~/Content/Theme/Default/styles/jquery-ui")
</head>

<body>
    <div id='home-master-container'>
        <div id='home-internal-container'>
            <header>
                <div id='header-container'>
                    <div class="float-right">
                        <section id="login">
                           @Html.Partial("_LoginPartial")
                        </section>
                    </div>
                </div>
            </header>
            <div id="home-body-container">
                
                    <div class="home-all-body-container">
                        @RenderSection("feature", required: false)
                        <section>
                            @RenderBody()
                        </section>
                    </div>
            </div>
        </div>
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/customtags")

    @RenderSection("scripts", required: false)
</body>
</html>