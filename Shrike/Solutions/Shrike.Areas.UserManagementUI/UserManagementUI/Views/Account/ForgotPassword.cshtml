@using System.Web.Mvc.Html
@model Shrike.UserManagement.BusinessLogic.Models.ForgotPasswordUser
@{
    ViewBag.Title = "Forgot Password View";
    Layout = "~/Areas/UserManagementUI/Views/Shared/_AccountPartialLayout.cshtml";
}

<div class="message-info-header">
    <h1 style="font-size:1.5em;">@ViewBag.Title</h1>
</div>

<div class="login-content">
    <div id=login-container>

        @using (Html.BeginForm("ForgotPassword","Account", new { id="forgotPassword", ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.ValidationSummary(true)

            <fieldset id="fieldset-account-login">
                <legend class="subtitle-container">Email Sender Form</legend>
                <ol>
                    <li>
                        <div class="row-form">
                            <div class="editor-label">
                                @Html.LabelFor(m => m.ContactEmail)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.ContactEmail, new { @class = "home-text-field" })

                            </div>
                        </div>
                    </li>
                    <li>
                        <div>@Html.ValidationMessageFor(m => m.ContactEmail)</div>
                    </li>                                        
                </ol>
                <div class="submit-button">
                    <input type="submit" value="send"/>
                </div>
            </fieldset>            
            <p style="margin-left: 20px">
                @Html.ActionLink("Register", "TakeOwnership", "Account") if you don't have an account.
            </p>
        }
        
    </div>
</div> 
