@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
    Layout = ViewBag.Layout == null ? (this.Context.Request.IsAuthenticated ? "~/Views/Shared/_ShrikePartialLayout.cshtml" : "~/Views/Shared/_ErrorPartialLayout.cshtml") : (string)ViewBag.Layout;
}

<div class="error">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
    @{
        if (Request.IsLocal)
        {
            if (@Model != null && Model.Exception != null)
            {
                <h3>Exceptions was: 
                </h3>

                <div>
                    @Model.Exception.ToString()
                </div>

                <br class="clear" />

                if (@Model.Exception.InnerException != null)
                {
                    <h2>Inner Exceptions was: 
                    </h2>

                    <div class="inner-exception">
                        @Model.Exception.InnerException.ToString()
                    </div>
                }

            }
            else
            {
                <h3>Exception was null
                </h3>
            }
        }

        <h4>The error has been logged correctly
        </h4>
    }
</div>
